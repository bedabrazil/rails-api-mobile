  </div>
  <div class="field col-lg-2 form-space">
    <%= f.label :active %><br>
    <%= f.check_box :active %>
  </div>
  <div class="field col-lg-2 form-space">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="field col-lg-2 form-space">
    <%= f.label :category_id %><br>
    <%= f.text_field :category_id, class: "form-control" %>
  </div>
